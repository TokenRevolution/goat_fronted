# GOAT Platform Environment Variables Example
# Copy this file to .env and fill in your actual values

# ===========================================
# APPLICATION SETTINGS
# ===========================================
REACT_APP_NAME=GOAT Platform
REACT_APP_VERSION=1.0.0
REACT_APP_ENVIRONMENT=development

# ===========================================
# BLOCKCHAIN CONFIGURATION
# ===========================================

# Default Network (1=Ethereum, 56=BSC, 137=Polygon, 42161=Arbitrum)
REACT_APP_DEFAULT_CHAIN_ID=1

# RPC URLs for different networks
REACT_APP_ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID
REACT_APP_BSC_RPC_URL=https://bsc-dataseed.binance.org/
REACT_APP_POLYGON_RPC_URL=https://polygon-rpc.com/
REACT_APP_ARBITRUM_RPC_URL=https://arb1.arbitrum.io/rpc

# Testnet RPC URLs (for development)
REACT_APP_GOERLI_RPC_URL=https://goerli.infura.io/v3/YOUR_INFURA_PROJECT_ID
REACT_APP_BSC_TESTNET_RPC_URL=https://data-seed-prebsc-1-s1.binance.org:8545/
REACT_APP_POLYGON_MUMBAI_RPC_URL=https://rpc-mumbai.maticvigil.com/

# ===========================================
# SMART CONTRACT ADDRESSES
# ===========================================

# Main GOAT Platform Contract
REACT_APP_GOAT_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000

# Token Contracts
REACT_APP_USDT_CONTRACT_ADDRESS=0xdAC17F958D2ee523a2206206994597C13D831ec7
REACT_APP_USDC_CONTRACT_ADDRESS=0xA0b86a33E6417c8143A0552fA2aBA55bc7c76f85

# Testnet Contract Addresses (for development)
REACT_APP_GOAT_CONTRACT_ADDRESS_TESTNET=0x0000000000000000000000000000000000000000
REACT_APP_USDT_CONTRACT_ADDRESS_TESTNET=0x0000000000000000000000000000000000000000

# ===========================================
# API CONFIGURATION
# ===========================================

# Backend API Base URL
REACT_APP_API_BASE_URL=https://api.goat-platform.com
REACT_APP_API_BASE_URL_DEV=http://localhost:3001

# API Keys
REACT_APP_API_KEY=your_api_key_here

# GraphQL Endpoint (if using The Graph for blockchain data)
REACT_APP_GRAPHQL_ENDPOINT=https://api.thegraph.com/subgraphs/name/goat/platform

# ===========================================
# EXTERNAL SERVICES
# ===========================================

# Infura Project ID (for Ethereum/IPFS)
REACT_APP_INFURA_PROJECT_ID=your_infura_project_id
REACT_APP_INFURA_SECRET=your_infura_secret

# Alchemy API Key (alternative to Infura)
REACT_APP_ALCHEMY_API_KEY=your_alchemy_api_key

# WalletConnect Project ID
REACT_APP_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id

# Etherscan API Keys (for transaction verification)
REACT_APP_ETHERSCAN_API_KEY=your_etherscan_api_key
REACT_APP_BSCSCAN_API_KEY=your_bscscan_api_key
REACT_APP_POLYGONSCAN_API_KEY=your_polygonscan_api_key

# ===========================================
# ANALYTICS & MONITORING
# ===========================================

# Google Analytics
REACT_APP_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Sentry (Error Monitoring)
REACT_APP_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Mixpanel (User Analytics)
REACT_APP_MIXPANEL_TOKEN=your_mixpanel_token

# ===========================================
# SOCIAL & SHARING
# ===========================================

# Social Media Links
REACT_APP_TWITTER_URL=https://twitter.com/GOATPlatform
REACT_APP_DISCORD_URL=https://discord.gg/goat
REACT_APP_TELEGRAM_URL=https://t.me/goatplatform

# Referral Base URL
REACT_APP_REFERRAL_BASE_URL=https://goat-platform.com/ref/

# ===========================================
# FEATURE FLAGS
# ===========================================

# Enable/Disable Features
REACT_APP_ENABLE_REFERRALS=true
REACT_APP_ENABLE_STAKING=false
REACT_APP_ENABLE_NFT_TROPHIES=false
REACT_APP_ENABLE_MOBILE_APP_BANNER=true

# Debug Mode
REACT_APP_DEBUG_MODE=false
REACT_APP_CONSOLE_LOGS=true

# ===========================================
# SECURITY
# ===========================================

# JWT Secret (if handling authentication)
REACT_APP_JWT_SECRET=your-super-secret-jwt-key

# Rate Limiting
REACT_APP_RATE_LIMIT_ENABLED=true
REACT_APP_MAX_REQUESTS_PER_MINUTE=100

# ===========================================
# DEVELOPMENT ONLY
# ===========================================

# Mock Data (for development without backend)
REACT_APP_USE_MOCK_DATA=true
REACT_APP_MOCK_WALLET_ADDRESS=0x1234567890123456789012345678901234567890

# Development Server
REACT_APP_DEV_SERVER_PORT=3000
REACT_APP_DEV_SERVER_HOST=localhost

# Fast Refresh
FAST_REFRESH=true

# Source Maps
GENERATE_SOURCEMAP=true
